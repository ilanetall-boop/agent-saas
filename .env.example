# =============================================================================
# MY BEST AGENT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=5000
APP_NAME=My Best Agent

# =============================================================================
# URLS
# =============================================================================
APP_URL=https://mybestagent.io
API_URL=https://api.mybestagent.io
TELEGRAM_WEBHOOK_URL=https://mybestagent.io

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/mybestagent_db
REDIS_URL=redis://localhost:6379

# =============================================================================
# TELEGRAM BOT
# =============================================================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_min_32_chars

# Session encryption
SESSION_SECRET=your_session_secret_here

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://mybestagent.io/api/oauth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=https://mybestagent.io/api/oauth/github/callback

# =============================================================================
# AI & LANGUAGE MODELS
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key
# Alternative models
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=mybestagent-files
AWS_S3_URL=https://mybestagent-files.s3.amazonaws.com

# Or use local storage in development
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# =============================================================================
# EMAIL
# =============================================================================
# For verification emails, password resets, notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@mybestagent.io
SMTP_FROM_NAME=My Best Agent

# =============================================================================
# ERROR TRACKING & MONITORING
# =============================================================================
# Sentry
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=production

# =============================================================================
# PAYMENTS (Optional)
# =============================================================================
STRIPE_SECRET_KEY=sk_live_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# DESKTOP APP CONFIGURATION
# =============================================================================
# Set this in electron/.env
REACT_APP_API_URL=https://api.mybestagent.io

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Telegram webhook rate limit
TELEGRAM_RATE_LIMIT_WINDOW=60000  # 1 minute
TELEGRAM_RATE_LIMIT_MAX=30

# =============================================================================
# CORS
# =============================================================================
CORS_ALLOWED_ORIGINS=https://mybestagent.io,https://www.mybestagent.io,http://localhost:3000

# =============================================================================
# FEATURES / FLAGS
# =============================================================================
ENABLE_TELEGRAM=true
ENABLE_WHATSAPP=false
ENABLE_DESKTOP=true
ENABLE_PAYMENTS=true
ENABLE_ANALYTICS=true

# =============================================================================
# DESKTOP APP AUTO-UPDATE
# =============================================================================
AUTO_UPDATE_CHECK_INTERVAL=3600000  # 1 hour in ms
RELEASES_URL=https://github.com/mybestagent/releases/releases/latest
CDN_URL=https://cdn.mybestagent.io/desktop

# =============================================================================
# DEVELOPMENT ONLY (Uncomment for local development)
# =============================================================================
# DEBUG=mybestagent:*
# NODE_ENV=development
# PORT=3001
# APP_URL=http://localhost:3000
# API_URL=http://localhost:5000
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mybestagent_dev
